<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/layout_card_view_course"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/image_view_card_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:tint="#666"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_description"/>

            <ImageView
                android:id="@+id/image_view_card_course_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:tint="#666"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/image_view_card_course_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_person_outline"/>

            <TextView
                android:id="@+id/text_view_course_card_view_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Course:"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#333"
                app:layout_constraintLeft_toRightOf="@id/image_view_card_course_name"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_course_card_view_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Name"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                app:layout_constraintLeft_toRightOf="@id/text_view_course_card_view_course_title"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_course_card_view_teacher_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Teacher: "
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#333"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_view_card_course_teacher"
                app:layout_constraintTop_toBottomOf="@id/text_view_course_card_view_course_title"/>

            <TextView
                android:id="@+id/text_view_course_card_view_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Name"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/Base.TextAppearance.AppCompat.Small"
                app:layout_constraintLeft_toRightOf="@id/text_view_course_card_view_teacher_title"
                app:layout_constraintTop_toBottomOf="@id/text_view_course_card_view_course_name" />

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>