<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="?attr/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/image_view_student_navigation_header"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/ic_account"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/image_view_student_navigation_box"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/image_view_student_navigation_box"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_student_navigation_header"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_view_student_navigation_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/text_view_student_navigation_header_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nur.almakhanov@gmail.com"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_student_navigation_header_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>