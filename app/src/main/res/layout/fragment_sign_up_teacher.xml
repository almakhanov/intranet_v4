<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scroll_view_teacher_fragment"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.sign_in.sign_up.SignUpTeacherFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_sign_up_teacher_name"
        android:layout_width="0dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


        <EditText
            android:id="@+id/edit_text_sign_up_teacher_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Full name"
            android:inputType="text"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_sign_up_teacher_username"
        android:layout_width="0dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_sign_up_teacher_name">


        <EditText
            android:id="@+id/edit_text_sign_up_teacher_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Username"
            android:inputType="textEmailAddress"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_sign_up_teacher_age"
        android:layout_width="0dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_sign_up_teacher_username">


        <EditText
            android:id="@+id/edit_text_sign_up_teacher_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Age"
            android:inputType="number"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_sign_up_teacher_degree"
        android:layout_width="0dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_sign_up_teacher_age">


        <EditText
            android:id="@+id/edit_text_sign_up_teacher_degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Degree"
            android:inputType="text"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_sign_up_teacher_password"
        android:layout_width="0dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_sign_up_teacher_degree">


        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:layout_margin="8dp"
            android:hint="Password"
            app:tint_color="@color/colorAccent"
            android:id="@+id/edit_text_sign_up_teacher_password"
            app:drawable_show="@drawable/ic_visibility"
            app:drawable_hide="@drawable/ic_visibility_off"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_sign_up_teacher_confirm_password"
        android:layout_width="0dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_sign_up_teacher_password">


        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:layout_margin="8dp"
            android:hint="Confirm Password"
            app:tint_color="@color/colorAccent"
            android:id="@+id/edit_text_sign_up_teacher_confirm_password"
            app:drawable_show="@drawable/ic_visibility"
            app:drawable_hide="@drawable/ic_visibility_off"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_sign_up_teacher_secret_code"
        android:layout_width="0dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_sign_up_teacher_confirm_password">


        <EditText
            android:id="@+id/edit_text_sign_up_teacher_secret_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Secret code"
            android:inputType="number"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>
</ScrollView>